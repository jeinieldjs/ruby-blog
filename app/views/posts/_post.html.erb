<div id='<%= dom_id post %>' class='post-page'>
 <div class='post-upper'>
  <div class='center-title'>
    <strong class='page-title'><%= post.title %></strong>
  </div>

  <div class='time'>
    <% if post.persisted? %>
      <div class='form-input'>
        <strong>Posted At:</strong> <%= post.created_at %>
      </div>
    <% end %>
    <% if post.updated_at? %>
      <div class='form-input'>
        <strong>Updated At:</strong> <%= post.updated_at %>
      </div>
    <% end %> 
  </div>
 </div>

  <div class ='post-content'>
    <%= simple_format(@post.body) %>
  </div>

</div>
