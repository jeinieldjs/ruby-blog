<div class='message-container'>
<% flash.each do |key, value| %>
  <p class="<%= key %>"><%= value %></p>
<% end %>
</div>

<%= render @post %>

<div class="post-actions">
  <div class ='top-link'>
  <%= link_to "Edit Post", edit_post_path(@post), class:'link' %> |
  <%= link_to "Home", posts_path, class:'link'%>
  </div>
  <%= button_to "Delete", @post, method: :delete, class:'delete-btn' %>
</div>

<div class="comment-form">
    <p class= 'notes'>Leave a message</p>
    <%= render 'comments/form', post: @post, comment: @comment, class:'form' %>
</div>

<div class="comments-section">
  <h2><%= @post.comments.count %> Comment/s:</h2>
  <% @comments.each do |comment| %>
    <div class="comment">
      <h4 class="comment-user"><%= comment.name %></h4>
      <p class="comment-body"><%= comment.body %></p>
      
      <%= link_to "Edit", edit_post_comment_path(@post, comment) %> |
      <%= button_to "Delete", post_comment_path(@post, comment), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>